<h1>Edit User</h1>

<%= form_for @user do |f| %>
  <%= f.label :first_name  %>
  <br>
  <%= f.text_field :first_name %>

  <p></p>

  <%= f.label :last_name  %>
  <br>
  <%= f.text_field :last_name %>

  <p></p>


  <%= f.label :email, "Email: (Email will be your username)" %>
  <br>
  <%= f.text_field :email %>
  <br>

  <p></p>

  <%= f.label :password  %>
  <br>
  <%= f.password_field :password %>

  <p></p>

  <%= f.label :phone_number  %>
  <br>
  <%= f.text_field :phone_number %>

  <p></p>

    

  <p></p>

  <%= f.submit %>
<% end %>
