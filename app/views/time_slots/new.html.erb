<h1>Create New Time Slot</h1>

<p></p>
<% if flash[:notice] %>
  <span class="flash_notice_red"><%= flash[:notice] %></span>
  <% flash[:notice] = nil %>
<% end %>
<p></p>

<h2>For Venue: <%= @venue.name %></h2>
<!-- need to insert venue name -->
<!-- consider changing data table to have date and then start/end times -->

<h5><% if current_user.promoter %>
  <% if current_user.promoter.id == @venue.promoter.id %>
    <%= form_for(@time_slot) do |f| %>

      <%= f.label :date  %><br>
      <%= f.date_field :date %><br>
      <p></p>

      <%= f.label :start_time  %> <br>
      <%= f.time_field :start_time %>
      <p></p>

      <%= f.label :end_time  %><br>
      <%= f.time_field :end_time %><br>
     
      <p></p>
      
      <p></p>

      <p></p>

      <%= f.button :submit, name: "time_slot[venue_id]", value: @venue.id %></h5>
    <% end %>
  <% end %>
<% end %>
<br>
